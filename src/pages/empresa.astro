---
import Layout from "../layouts/Layout.astro";
import CtaOne from "../components/ui/CtaOne.astro";
import PageHeader from "../components/ui/PageHeader.astro";

// Datos del equipo
const teamMembers = [
  {
    name: "María González",
    role: "Directora Comercial",
    bio: "Con más de 15 años de experiencia en el sector inmobiliario, María lidera nuestro equipo comercial con pasión y dedicación.",
    image: "https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&h=400&q=80",
    linkedin: "#",
    email: "maria@empresa.cl"
  },
  {
    name: "Carlos Ruiz",
    role: "Gerente de Ventas",
    bio: "Especialista en inversiones inmobiliarias y asesoría financiera. Carlos ayuda a nuestros clientes a tomar las mejores decisiones.",
    image: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&h=400&q=80",
    linkedin: "#",
    email: "carlos@empresa.cl"
  },
  {
    name: "Ana Morales",
    role: "Especialista en Propiedades",
    bio: "Experta en evaluación y tasación de propiedades. Ana se asegura de que cada cliente encuentre la propiedad perfecta.",
    image: "https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&h=400&q=80",
    linkedin: "#",
    email: "ana@empresa.cl"
  },
  {
    name: "Luis Hernández",
    role: "Director de Marketing",
    bio: "Responsable de posicionar las mejores propiedades en el mercado y conectar con los clientes ideales.",
    image: "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&h=400&q=80",
    linkedin: "#",
    email: "luis@empresa.cl"
  }
];
---

<Layout title="Nuestra Empresa | Propiedades Inmobiliarias">
  <PageHeader 
    title="Nuestra Empresa"
    subtitle="10+ años de experiencia"
    description="Más de una década construyendo confianza y ayudando a familias a encontrar su hogar ideal en Chile"
    backgroundImage="https://images.unsplash.com/photo-1497366216548-37526070297c?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80"
    breadcrumb={[
      { label: "Inicio", href: "/" },
      { label: "Empresa" }
    ]}
  />

  <!-- Company Introduction -->
  <section class="py-24 sm:py-32 bg-muted/30">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2 lg:items-center">
        <!-- Content -->
        <div class="lg:pr-8 lg:pt-4">
          <div class="lg:max-w-lg">
            <h2 class="text-base font-semibold leading-7 text-primary">Nuestra Historia</h2>
            <p class="mt-2 text-3xl font-bold tracking-tight text-foreground sm:text-4xl">
              Una década de excelencia inmobiliaria
            </p>
            <p class="mt-6 text-lg leading-8 text-muted-foreground">
              Fundada en 2013, nuestra empresa nació con la misión de revolucionar la experiencia inmobiliaria en Chile. 
              Comenzamos como una pequeña empresa familiar y hemos crecido hasta convertirnos en una de las principales 
              referencias del sector.
            </p>
            
            <!-- Mission & Values -->
            <div class="mt-8">
              <h3 class="text-lg font-semibold text-foreground mb-4">Nuestros Valores</h3>
              <ul class="space-y-3">
                <li class="flex items-start">
                  <svg class="h-6 w-6 text-primary mr-3 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <div>
                    <strong class="text-foreground">Transparencia:</strong> 
                    <span class="text-muted-foreground">Sin comisiones ocultas ni sorpresas en el proceso</span>
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="h-6 w-6 text-primary mr-3 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <div>
                    <strong class="text-foreground">Compromiso:</strong> 
                    <span class="text-muted-foreground">Acompañamiento personalizado en todo el proceso</span>
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="h-6 w-6 text-primary mr-3 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <div>
                    <strong class="text-foreground">Innovación:</strong> 
                    <span class="text-muted-foreground">Tecnología de última generación para mejores resultados</span>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
        
        <!-- Image -->
        <div class="relative">
          <img 
            src="https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&h=600&q=80" 
            alt="Nuestra oficina"
            class="w-full rounded-2xl object-cover shadow-xl ring-1 ring-border/10"
            loading="lazy"
          />
          
          <!-- Stats overlay -->
          <div class="absolute -bottom-8 -left-8 lg:-left-16">
            <div class="rounded-xl bg-card/90 backdrop-blur-sm p-6 shadow-lg ring-1 ring-border/20 border border-border/50">
              <div class="grid grid-cols-2 gap-4 text-center">
                <div>
                  <div class="text-2xl font-bold text-primary">500+</div>
                  <div class="text-sm text-muted-foreground">Familias satisfechas</div>
                </div>
                <div>
                  <div class="text-2xl font-bold text-primary">10+</div>
                  <div class="text-sm text-muted-foreground">Años de experiencia</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Section -->
  <section class="py-24 sm:py-32 bg-background">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl">
          Nuestro Equipo
        </h2>
        <p class="mt-6 text-lg leading-8 text-muted-foreground">
          Profesionales comprometidos con tu éxito inmobiliario
        </p>
      </div>
      
      <div class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2 xl:grid-cols-4">
        {teamMembers.map((member) => (
          <div class="group">
            <div class="aspect-square w-full overflow-hidden rounded-2xl bg-muted">
              <img 
                src={member.image} 
                alt={member.name}
                class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                loading="lazy"
              />
            </div>
            <div class="mt-6">
              <h3 class="text-lg font-semibold leading-8 tracking-tight text-foreground">
                {member.name}
              </h3>
              <p class="text-base leading-7 text-primary font-medium">
                {member.role}
              </p>
              <p class="mt-4 text-sm leading-6 text-muted-foreground">
                {member.bio}
              </p>
              
              <!-- Contact links -->
              <div class="mt-4 flex space-x-4">
                <a 
                  href={`mailto:${member.email}`}
                  class="text-muted-foreground hover:text-primary transition-colors"
                  aria-label={`Email ${member.name}`}
                >
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                    <path d="m18 8.118-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                  </svg>
                </a>
                <a 
                  href={member.linkedin}
                  class="text-muted-foreground hover:text-primary transition-colors"
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={`LinkedIn ${member.name}`}
                >
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <CtaOne 
    title="¿Listo para trabajar con nosotros?"
    subtitle="Tu hogar ideal te está esperando"
    description="Nuestro equipo de expertos está listo para ayudarte a encontrar la propiedad perfecta. Contáctanos y comencemos este emocionante viaje juntos."
    primaryButtonText="Contactar equipo"
    primaryButtonUrl="/contacto"
    secondaryButtonText="Ver propiedades"
    secondaryButtonUrl="/propiedades"
  />
</Layout>