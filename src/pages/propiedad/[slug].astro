---
import Layout from "../../layouts/Layout.astro";
import PropertyGallery from "../../components/propiedades/PropertyGallery.astro";
import PropertyDetails from "../../components/propiedades/PropertyDetails.astro";
import PropertyFeatures from "../../components/propiedades/PropertyFeatures.astro";
import PropertyMap from "../../components/propiedades/PropertyMap.astro";
import CtaTwo from "../../components/ui/CtaTwo.astro";
import { obtenerPropiedades } from "../../services/propiedades";
import type { Propiedad } from "../../types/propiedad";

export async function getStaticPaths() {
  const propiedades = await obtenerPropiedades();

  return propiedades.map((propiedad) => ({
    params: { slug: propiedad.slug },
    props: { propiedad },
  }));
}

interface Props {
  propiedad: Propiedad;
}

const { propiedad } = Astro.props;
---

<Layout title={`${propiedad.title} | Propiedades Inmobiliarias`}>
	<!-- Contenedor principal -->
	<div class="min-h-screen bg-background">
		<!-- Breadcrumb navigation -->
		<div class="bg-muted/30 border-b border-border">
			<div class="mx-auto max-w-7xl px-4 py-4">
				<nav class="flex items-center space-x-2 text-sm text-muted-foreground">
					<a href="/" class="hover:text-foreground transition-colors duration-200 flex items-center gap-1">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
						</svg>
						Inicio
					</a>
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
					</svg>
					<a href="/propiedades" class="hover:text-foreground transition-colors duration-200">
						Propiedades
					</a>
					<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
					</svg>
					<span class="text-foreground font-medium">{propiedad.title}</span>
				</nav>
			</div>
		</div>

		<!-- Contenido principal -->
		<div class="mx-auto max-w-7xl px-4 py-8">
			<div class="grid grid-cols-1 xl:grid-cols-2 gap-8">
				<!-- Columna izquierda - Galería -->
				<div>
					<PropertyGallery 
						galeria={propiedad.galeria} 
						title={propiedad.title} 
					/>
				</div>

				<!-- Columna derecha - Detalles -->
				<div class="xl:col-span-1">
					<div class="sticky top-8 space-y-6">
						<PropertyDetails 
							title={propiedad.title}
							direccion={propiedad.direccion}
							precio={propiedad.precio}
							tipo={propiedad.tipo}
							operacion={propiedad.operacion}
							descripcion={propiedad.descripcion}
						/>

						<!-- Botones de acción -->
						<div class="space-y-4 p-6 bg-muted/30 rounded-xl border border-border">
							<h3 class="font-semibold text-foreground mb-4 flex items-center gap-2">
								<svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
								</svg>
								¿Interesado en esta propiedad?
							</h3>

							<div class="flex flex-col gap-3">
								<!-- Botón principal de contacto -->
								<a 
									href="/contacto" 
									class="group relative w-full bg-primary hover:bg-primary/90 text-primary-foreground px-6 py-4 rounded-lg font-semibold transition-all duration-300 hover:shadow-lg hover:shadow-primary/25 hover:-translate-y-0.5 flex items-center justify-center gap-2"
								>
									<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
									</svg>
									Contactar agente
									<svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
									</svg>
								</a>

								<!-- Botón WhatsApp -->
								<a 
									href={`https://wa.me/56912345678?text=Hola, estoy interesado en la propiedad: ${encodeURIComponent(propiedad.title)}`}
									target="_blank"
									rel="noopener noreferrer" 
									class="group w-full bg-green-600 hover:bg-green-700 text-white px-6 py-4 rounded-lg font-semibold transition-all duration-300 hover:shadow-lg hover:shadow-green-600/25 hover:-translate-y-0.5 flex items-center justify-center gap-2"
								>
									<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
										<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.570-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.108"></path>
									</svg>
									WhatsApp directo
									<svg class="w-4 h-4 transform group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
									</svg>
								</a>

								<!-- Botón secundario -->
								<button 
									type="button"
									class="w-full bg-transparent border-2 border-border hover:border-primary hover:bg-primary/5 text-foreground hover:text-primary px-6 py-3 rounded-lg font-medium transition-all duration-300 flex items-center justify-center gap-2"
								>
									<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
									</svg>
									Guardar favoritos
								</button>
							</div>

							<!-- Información adicional -->
							<div class="mt-4 pt-4 border-t border-border text-center">
								<p class="text-sm text-muted-foreground mb-2">Respuesta garantizada en menos de 24 horas</p>
								<div class="flex items-center justify-center gap-4 text-xs text-muted-foreground">
									<span class="flex items-center gap-1">
										<svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
											<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
										</svg>
										Sin compromiso
									</span>
									<span class="flex items-center gap-1">
										<svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
											<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
										</svg>
										Gratis
									</span>
								</div>
							</div>
						</div>
			</div>
		</div>
	</div>

	<!-- Modal simple embebido -->
	<div id="property-gallery-modal" class="fixed inset-0 bg-black/95 backdrop-blur-sm z-50 hidden items-center justify-center">
		<!-- Overlay de cierre -->
		<div class="absolute inset-0 cursor-pointer" onclick="closeModal()"></div>
		
		<!-- Contenedor del modal -->
		<div class="relative w-full h-full max-w-7xl mx-auto p-4 flex flex-col">
			<!-- Header del modal -->
			<div class="flex items-center justify-between mb-4 z-10">
				<div class="flex items-center gap-4">
					<h3 id="modal-title" class="text-white text-lg font-semibold"></h3>
					<div class="text-white/70 text-sm">
						<span id="modal-counter">1 / 1</span>
					</div>
				</div>
				<button onclick="closeModal()" class="text-white/70 hover:text-white transition-colors p-2 hover:bg-white/10 rounded-full" aria-label="Cerrar modal">
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
					</svg>
				</button>
			</div>

			<!-- Contenedor de la imagen -->
			<div class="flex-1 flex items-center justify-center relative">
				<div class="relative max-w-full max-h-full">
					<img
						id="modal-image"
						src=""
						alt=""
						class="max-w-full max-h-full object-contain rounded-lg shadow-2xl"
					/>
					
					<!-- Loading spinner -->
					<div id="modal-loading" class="absolute inset-0 flex items-center justify-center">
						<div class="animate-spin w-8 h-8 border-2 border-white/30 border-t-white rounded-full"></div>
					</div>
				</div>

				<!-- Botones de navegación -->
				<button 
					id="modal-prev" 
					onclick="prevImage()"
					class="absolute left-4 top-1/2 -translate-y-1/2 text-white/70 hover:text-white bg-black/30 hover:bg-black/50 backdrop-blur-sm p-3 rounded-full transition-all duration-200 hover:scale-110"
					aria-label="Imagen anterior"
				>
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
					</svg>
				</button>
				
				<button 
					id="modal-next" 
					onclick="nextImage()"
					class="absolute right-4 top-1/2 -translate-y-1/2 text-white/70 hover:text-white bg-black/30 hover:bg-black/50 backdrop-blur-sm p-3 rounded-full transition-all duration-200 hover:scale-110"
					aria-label="Imagen siguiente"
				>
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
					</svg>
				</button>
			</div>

			<!-- Footer con miniaturas -->
			<div class="mt-4 z-10">
				<div id="modal-thumbnails" class="flex gap-2 justify-center overflow-x-auto pb-2 max-w-full">
					<!-- Miniaturas se insertan dinámicamente -->
				</div>
			</div>
		</div>
	</div>

	<!-- Script simple para el modal -->
	<script is:inline>
		(function() {
			let modalImages = [];
			let currentModalIndex = 0;

			function openModal(images, startIndex) {
				modalImages = images;
				currentModalIndex = startIndex || 0;
				
				const modal = document.getElementById('property-gallery-modal');
				modal.classList.remove('hidden');
				modal.classList.add('flex');
				document.body.style.overflow = 'hidden';
				
				updateModalContent();
				createModalThumbnails();
			}

		function closeModal() {
			const modal = document.getElementById('property-gallery-modal');
			modal.classList.add('hidden');
			modal.classList.remove('flex');
			document.body.style.overflow = '';
		}

		function prevImage() {
			if (currentModalIndex > 0) {
				currentModalIndex--;
			} else {
				currentModalIndex = modalImages.length - 1;
			}
			updateModalContent();
		}

		function nextImage() {
			if (currentModalIndex < modalImages.length - 1) {
				currentModalIndex++;
			} else {
				currentModalIndex = 0;
			}
			updateModalContent();
		}

		function updateModalContent() {
			const currentImage = modalImages[currentModalIndex];
			if (!currentImage) return;

			const modalImage = document.getElementById('modal-image');
			const modalTitle = document.getElementById('modal-title');
			const modalCounter = document.getElementById('modal-counter');
			const modalLoading = document.getElementById('modal-loading');

			// Mostrar loading
			modalLoading.style.display = 'flex';
			
			// Actualizar imagen
			modalImage.onload = function() {
				modalLoading.style.display = 'none';
			};
			
			modalImage.src = currentImage.url;
			modalImage.alt = currentImage.title;
			
			// Actualizar título y contador
			if (modalTitle) {
				modalTitle.textContent = currentImage.title;
			}
			
			if (modalCounter) {
				modalCounter.textContent = (currentModalIndex + 1) + ' / ' + modalImages.length;
			}

			updateModalThumbnailsState();
		}

		function createModalThumbnails() {
			const modalThumbnails = document.getElementById('modal-thumbnails');
			if (!modalThumbnails || modalImages.length <= 1) return;

			modalThumbnails.innerHTML = '';
			
			modalImages.forEach(function(image, index) {
				const thumb = document.createElement('button');
				thumb.className = 'flex-shrink-0 w-16 h-16 rounded-lg overflow-hidden border-2 transition-all duration-200 ' + 
					(index === currentModalIndex 
						? 'border-white shadow-lg' 
						: 'border-transparent hover:border-white/50');
				
				const img = document.createElement('img');
				img.src = image.url;
				img.alt = image.title;
				img.className = 'w-full h-full object-cover';
				
				thumb.appendChild(img);
				thumb.addEventListener('click', function() {
					currentModalIndex = index;
					updateModalContent();
				});
				
				modalThumbnails.appendChild(thumb);
			});
		}

		function updateModalThumbnailsState() {
			const modalThumbnails = document.getElementById('modal-thumbnails');
			if (!modalThumbnails) return;
			
			const thumbnails = modalThumbnails.querySelectorAll('button');
			thumbnails.forEach(function(thumb, index) {
				if (index === currentModalIndex) {
					thumb.classList.remove('border-transparent', 'hover:border-white/50');
					thumb.classList.add('border-white', 'shadow-lg');
				} else {
					thumb.classList.remove('border-white', 'shadow-lg');
					thumb.classList.add('border-transparent', 'hover:border-white/50');
				}
			});
		}

		// Navegación con teclado
		document.addEventListener('keydown', function(e) {
			const modal = document.getElementById('property-gallery-modal');
			if (!modal.classList.contains('hidden')) {
				switch(e.key) {
					case 'Escape':
						closeModal();
						break;
					case 'ArrowLeft':
						prevImage();
						break;
					case 'ArrowRight':
						nextImage();
						break;
				}
			}
		});

		// Hacer disponible globalmente
		window.openModal = openModal;
			window.closeModal = closeModal;
			window.prevImage = prevImage;
			window.nextImage = nextImage;
		})();
	</script>
</Layout>

<!-- Sección de características -->
<div class="mx-auto max-w-7xl px-4 mt-12">
	<PropertyFeatures 
		dormitorios={propiedad.dormitorios}
		banos={propiedad.banos}
		estacionamientos={propiedad.estacionamientos}
	/>
</div>

<!-- Sección del mapa -->
<div class="mx-auto max-w-7xl px-4 mt-12">
	<PropertyMap 
		mapa={propiedad.mapa}
		direccion={propiedad.direccion}
		title={propiedad.title}
	/>
</div>

<!-- Sección CTA -->
<CtaTwo 
	title="¿Te interesa esta propiedad?"
	description="Nuestro equipo de expertos está listo para ayudarte con toda la información que necesitas y acompañarte en cada paso del proceso."
	primaryButtonText="Contactar agente"
	primaryButtonUrl="/contacto"
	secondaryButtonText="Ver más propiedades"
	secondaryButtonUrl="/propiedades"
	backgroundStyle="pattern"
/>
