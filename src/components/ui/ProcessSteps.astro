---
interface Step {
  number: string;
  title: string;
  description: string;
  icon: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  steps?: Step[];
}

const {
  title = "Nuestro proceso de trabajo",
  subtitle = "Te acompañamos en cada paso hacia tu propiedad ideal",
  steps = [
    {
      number: "01",
      title: "Consulta inicial",
      description: "Conversamos sobre tus necesidades, presupuesto y preferencias para entender exactamente lo que buscas.",
      icon: "consultation"
    },
    {
      number: "02", 
      title: "Búsqueda personalizada",
      description: "Utilizamos nuestra experiencia y tecnología para encontrar las propiedades que mejor se adapten a ti.",
      icon: "search"
    },
    {
      number: "03",
      title: "Visitas guiadas",
      description: "Te acompañamos a visitar las propiedades seleccionadas y te asesoramos sobre cada una de ellas.",
      icon: "visit"
    },
    {
      number: "04",
      title: "Negociación",
      description: "Negociamos las mejores condiciones para ti, asegurándonos de obtener el mejor precio y términos.",
      icon: "negotiation"
    },
    {
      number: "05",
      title: "Documentación",
      description: "Nos encargamos de toda la documentación legal y trámites necesarios para la transacción.",
      icon: "documents"
    },
    {
      number: "06",
      title: "Cierre exitoso",
      description: "Finalizamos el proceso y te entregamos las llaves de tu nueva propiedad. ¡Misión cumplida!",
      icon: "success"
    }
  ]
} = Astro.props;
---

<section class="py-16 sm:py-24 bg-background">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <!-- Header -->
    <div class="mx-auto max-w-2xl text-center mb-16">
      <h2 class="text-3xl font-bold tracking-tight text-foreground sm:text-4xl">
        {title}
      </h2>
      <p class="mt-4 text-lg leading-8 text-muted-foreground">
        {subtitle}
      </p>
    </div>

    <!-- Steps -->
    <div class="mx-auto max-w-6xl">
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
        {steps.map((step, index) => (
          <div class="group relative">
            <!-- Connector line (only show for desktop) -->
            {index < steps.length - 1 && (
              <div class="absolute top-10 left-1/2 h-px w-full bg-border translate-x-1/2 hidden lg:block" aria-hidden="true"></div>
            )}
            
            <div class="relative flex flex-col items-center text-center">
              <!-- Step number and icon -->
              <div class="relative mb-6">
                <!-- Background circle -->
                <div class="flex h-20 w-20 items-center justify-center rounded-full bg-primary/10 group-hover:bg-primary/20 transition-colors duration-300 relative z-10">
                  {step.icon === "consultation" && (
                    <svg class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 01-.825-.242m9.345-8.334a2.126 2.126 0 00-.476-.095 48.64 48.64 0 00-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0011.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" />
                    </svg>
                  )}
                  {step.icon === "search" && (
                    <svg class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                    </svg>
                  )}
                  {step.icon === "visit" && (
                    <svg class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 21v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21m0 0h4.5V9.375c0-.621.504-1.125 1.125-1.125h.75c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125H6.75a1.125 1.125 0 01-1.125-1.125v-1.5m6 0V9.375c0-.621.504-1.125 1.125-1.125H15m0 0V8.25m0 1.125h.375c.621 0 1.125-.504 1.125-1.125V8.25m-6.375 0h1.5c.621 0 1.125.504 1.125 1.125v1.125m-1.125 0H9.375c-.621 0-1.125.504-1.125 1.125v1.125m3.75 0v1.5" />
                    </svg>
                  )}
                  {step.icon === "negotiation" && (
                    <svg class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 21L3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5" />
                    </svg>
                  )}
                  {step.icon === "documents" && (
                    <svg class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                    </svg>
                  )}
                  {step.icon === "success" && (
                    <svg class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  )}
                </div>
                
                <!-- Step number -->
                <div class="absolute -bottom-1 -right-1 flex h-8 w-8 items-center justify-center rounded-full bg-primary text-primary-foreground text-sm font-bold">
                  {step.number}
                </div>
              </div>

              <!-- Content -->
              <h3 class="text-lg font-semibold text-foreground mb-3">
                {step.title}
              </h3>
              <p class="text-muted-foreground leading-relaxed">
                {step.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- CTA -->
    <div class="mt-16 text-center">
      <div class="inline-flex items-center gap-2 rounded-full bg-primary/10 px-6 py-3 text-sm font-medium text-primary">
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        Proceso 100% transparente y sin comisiones ocultas
      </div>
    </div>
  </div>
</section>