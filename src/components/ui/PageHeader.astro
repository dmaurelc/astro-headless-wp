---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  backgroundImage?: string;
  breadcrumb?: Array<{ label: string; href?: string }>;
}

const {
  title,
  subtitle,
  description,
  backgroundImage = "https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80",
  breadcrumb = []
} = Astro.props;
---

<section class="relative bg-background py-24 sm:py-32 overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0 -z-10">
    <img
      src={backgroundImage}
      alt="Page header background"
      class="h-full w-full object-cover opacity-20"
      loading="eager"
    />
    <!-- Overlay optimizado para ambos temas -->
    <div class="absolute inset-0 bg-gradient-to-br from-background/90 via-background/95 to-background/90"></div>
  </div>

  <!-- Decorative elements -->
  <div class="absolute left-1/2 top-0 -z-10 -translate-x-1/2 blur-3xl xl:-top-6" aria-hidden="true">
    <div class="aspect-[1155/678] w-[72.1875rem] bg-gradient-to-tr from-primary/10 to-accent/10 opacity-30"
         style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)">
    </div>
  </div>

  <!-- Grid pattern -->
  <div class="absolute inset-0 bg-[linear-gradient(to_right,theme(colors.border/0.1)_1px,transparent_1px),linear-gradient(to_bottom,theme(colors.border/0.1)_1px,transparent_1px)] bg-[size:32px_32px] [mask-image:radial-gradient(ellipse_50%_80%_at_50%_0%,#000_70%,transparent_110%)]"></div>

  <div class="relative mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-4xl text-center">
      <!-- Breadcrumb -->
      {breadcrumb.length > 0 && (
        <nav class="mb-8" aria-label="Breadcrumb">
          <ol class="flex items-center justify-center space-x-2 text-sm">
            {breadcrumb.map((item, index) => (
              <li class="flex items-center">
                {index > 0 && (
                  <svg class="h-4 w-4 text-muted-foreground mx-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                  </svg>
                )}
                {item.href ? (
                  <a href={item.href} class="text-muted-foreground hover:text-primary transition-colors">
                    {item.label}
                  </a>
                ) : (
                  <span class="text-foreground font-medium">{item.label}</span>
                )}
              </li>
            ))}
          </ol>
        </nav>
      )}

      <!-- Subtitle badge -->
      {subtitle && (
        <div class="mb-6">
          <span class="inline-flex items-center rounded-full bg-primary/10 px-4 py-2 text-sm font-medium text-primary ring-1 ring-inset ring-primary/20">
            {subtitle}
          </span>
        </div>
      )}

      <!-- Main Title -->
      <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-6xl lg:text-7xl">
        {title}
      </h1>
      
      <!-- Description -->
      {description && (
        <p class="mx-auto mt-6 max-w-2xl text-lg leading-8 text-muted-foreground">
          {description}
        </p>
      )}

      <!-- Decorative line -->
      <div class="mx-auto mt-10 h-px w-24 bg-gradient-to-r from-transparent via-primary to-transparent"></div>
    </div>
  </div>
</section>