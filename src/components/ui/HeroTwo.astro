---
interface Props {
  title?: string;
  subtitle?: string;
  primaryButtonText?: string;
  primaryButtonUrl?: string;
  secondaryButtonText?: string;
  secondaryButtonUrl?: string;
  mainImage?: string;
  features?: string[];
}

const {
  title = "Impulsa tu negocio inmobiliario",
  subtitle = "Conectamos propietarios con compradores a través de tecnología avanzada y un servicio personalizado que garantiza resultados excepcionales.",
  primaryButtonText = "Ver propiedades",
  primaryButtonUrl = "/propiedades",
  secondaryButtonText = "Ver demo",
  secondaryButtonUrl = "/demo",
  mainImage = "https://images.unsplash.com/photo-1560518883-ce09059eeffa?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=800&q=80",
  features = [
    "Búsqueda inteligente con IA",
    "Tours virtuales en 360°",
    "Análisis de mercado en tiempo real",
    "Gestión completa de documentos"
  ]
} = Astro.props;
---

<section class="relative bg-background py-16 sm:py-24 lg:py-32">
  <!-- Background Pattern -->
  <div class="absolute inset-0 overflow-hidden" aria-hidden="true">
    <div class="absolute left-[calc(50%-4rem)] top-10 -z-10 transform-gpu blur-3xl lg:left-[calc(50%-18rem)] lg:top-[calc(50%-30rem)] xl:left-[calc(50%-24rem)]">
      <div class="aspect-[1108/632] w-[69.25rem] bg-gradient-to-r from-primary/20 via-accent/10 to-secondary/20 opacity-20" 
           style="clip-path: polygon(73.6% 51.7%, 91.7% 11.8%, 100% 46.4%, 97.4% 82.2%, 92.5% 84.9%, 75.7% 64%, 55.3% 47.5%, 46.5% 49.4%, 45% 62.9%, 50.3% 87.2%, 21.3% 64.1%, 0.1% 100%, 5.4% 51.1%, 21.4% 63.9%, 58.9% 0.2%, 73.6% 51.7%)">
      </div>
    </div>
  </div>

  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2 lg:items-center">
      
      <!-- Content Section -->
      <div class="lg:pr-8 lg:pt-4">
        <div class="lg:max-w-lg">
          <!-- Badge -->
          <div class="mb-6">
            <span class="inline-flex items-center rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary ring-1 ring-inset ring-primary/20">
              ✨ Nuevas funcionalidades
            </span>
          </div>

          <!-- Main Title -->
          <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-6xl">
            {title}
          </h1>
          
          <!-- Subtitle -->
          <p class="mt-6 text-lg leading-8 text-muted-foreground">
            {subtitle}
          </p>

          <!-- Features List -->
          <div class="mt-8">
            <h3 class="text-base font-semibold text-foreground mb-4">Características principales:</h3>
            <ul class="space-y-3">
              {features.map((feature) => (
                <li class="flex items-center text-muted-foreground">
                  <svg class="h-5 w-5 text-primary mr-3 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
          </div>

          <!-- Action Buttons -->
          <div class="mt-10 flex items-center gap-x-6">
            <a 
              href={primaryButtonUrl}
              class="inline-flex items-center justify-center gap-2 rounded-lg bg-primary px-6 py-3 text-base font-semibold text-primary-foreground shadow-sm hover:bg-primary/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary transition-all duration-200 transform hover:scale-105"
            >
              {primaryButtonText}
            </a>
            <a 
              href={secondaryButtonUrl}
              class="inline-flex items-center text-base font-semibold text-foreground hover:text-primary transition-colors duration-200"
            >
              {secondaryButtonText} 
              <svg class="ml-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Image Section -->
      <div class="relative">
        <!-- Main Image -->
        <img 
          src={mainImage} 
          alt="Hero visual"
          class="w-full rounded-2xl object-cover shadow-2xl ring-1 ring-border/10 lg:aspect-[4/3]"
          loading="eager"
        />
        
        <!-- Floating Card -->
        <div class="absolute -bottom-6 -left-6 lg:-left-12">
          <div class="rounded-xl bg-card/80 backdrop-blur-sm p-6 shadow-lg ring-1 ring-border/20 border border-border/50">
            <div class="flex items-center space-x-4">
              <div class="flex-shrink-0">
                <div class="h-12 w-12 rounded-full bg-primary/20 flex items-center justify-center">
                  <svg class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 18L9 11.25l4.306 4.307a11.95 11.95 0 015.814-5.519l2.74-1.22m0 0l-5.94-2.28m5.94 2.28l-2.28 5.94" />
                  </svg>
                </div>
              </div>
              <div>
                <p class="text-sm font-medium text-card-foreground">Ventas este mes</p>
                <p class="text-2xl font-bold text-primary">+127%</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Decorative dots -->
        <div class="absolute -top-6 -right-6 grid grid-cols-4 gap-2" aria-hidden="true">
          {Array.from({ length: 16 }).map((_, i) => (
            <div class="h-2 w-2 rounded-full bg-muted opacity-40"></div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>